<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorBlueBright</item>
        <item name="colorPrimary">@color/colorTransBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:toolbarStyle">@style/NavigationTheme</item>

        <item name="android:preferenceScreenStyle">@style/AppPreferenceTheme</item>
        <item name="android:preferenceCategoryStyle">@style/AppPreferenceTheme</item>
        <item name="android:preferenceStyle">@style/AppPreferenceTheme</item>

        <!--폰트 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <!-- Custom Preference Theme -->
    <style name="NavigationTheme">
        <item name="colorPrimaryDark">@color/colorBlueBright</item>
        <item name="colorPrimary">@color/colorTransBlack</item>
    </style>

    <!-- Custom Preference Theme -->
    <style name="AppPreferenceTheme"
           parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:titleTextColor">@color/colorBlue</item>
        <item name="android:subtitleTextColor">@color/colorBlue</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textColorSecondary">@color/colorGray</item>
    </style>

</resources>
