<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.PostWriteActivity"
        android:background="@color/colorGray">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRealWhite"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scrollView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />


    <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_back"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintRight_toLeftOf="@id/btn_delete"
    />

    <TextView
            android:id="@+id/btn_delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="100"
    />

    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/navigation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                      android:layout_height="match_parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/box_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorRealWhite"
                        android:padding="16dp"
                        app:layout_constraintTop_toTopOf="@id/constraint"
                        app:layout_constraintBottom_toTopOf="@id/box_location"
                        app:layout_constraintLeft_toLeftOf="@id/constraint"
                        app:layout_constraintRight_toRightOf="@id/constraint">

                    <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="[종류]"
                            android:layout_marginRight="8dp"
                            app:layout_constraintTop_toTopOf="@id/box_main"
                            app:layout_constraintBottom_toTopOf="@id/imageview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/tv_title"/>

                    <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="제목"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintTop_toTopOf="@id/tv_type"
                            app:layout_constraintBottom_toBottomOf="@id/tv_type"
                            app:layout_constraintLeft_toRightOf="@id/tv_type"/>

                    <TextView
                            android:id="@+id/tv_createdAt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTransBlack"
                            android:textSize="15dp"
                            android:text="2020/10/10"
                            app:layout_constraintTop_toBottomOf="@id/tv_title"
                            app:layout_constraintBottom_toTopOf="@id/imageview"
                            app:layout_constraintLeft_toLeftOf="@id/box_main"
                    />


                    <ImageView
                            android:id="@+id/imageview"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_thumsup"
                            android:layout_marginVertical="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_type"
                            app:layout_constraintBottom_toTopOf="@id/tv_contents"
                            app:layout_constraintRight_toLeftOf="@id/tv_recommended"/>

                    <TextView
                            android:id="@+id/tv_recommended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp"
                            android:text="123"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintTop_toTopOf="@id/imageview"
                            app:layout_constraintBottom_toBottomOf="@id/imageview"
                            app:layout_constraintRight_toRightOf="@id/box_main"/>

                    <ImageView
                            android:id="@+id/iv_image"
                            android:layout_width="380dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/flag_belgium"
                            android:visibility="gone"
                            android:layout_marginVertical="8dp"
                            app:layout_constraintTop_toBottomOf="@id/imageview"
                            app:layout_constraintBottom_toTopOf="@id/tv_contents"
                            app:layout_constraintLeft_toLeftOf="@id/box_main"
                            app:layout_constraintRight_toRightOf="@id/box_main"/>

                    <TextView
                            android:id="@+id/tv_contents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp"
                            android:text="비가 많이 와서 뗴제베운행이 일부중단된다고 합니다. 다들 사이트 들어가서 시간표 확인해보세요!!"
                            android:layout_marginBottom="32dp"
                            app:layout_constraintTop_toBottomOf="@id/imageview"
                            app:layout_constraintBottom_toTopOf="@id/iv_thumsup"
                            app:layout_constraintLeft_toLeftOf="@id/box_main"
                            app:layout_constraintRight_toRightOf="@id/box_main"
                    />


                    <ImageButton
                            android:id="@+id/iv_thumsup"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_thumsup"
                            android:layout_marginVertical="32dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_contents"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/iv_send"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="추천"
                            app:layout_constraintTop_toBottomOf="@id/iv_thumsup"
                            app:layout_constraintLeft_toLeftOf="@id/iv_thumsup"
                            app:layout_constraintRight_toRightOf="@id/iv_thumsup"
                    />

                    <ImageButton
                            android:id="@+id/iv_send"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_send"
                            android:layout_marginRight="8dp"
                            app:layout_constraintTop_toTopOf="@id/iv_thumsup"
                            app:layout_constraintBottom_toBottomOf="@id/iv_thumsup"
                            app:layout_constraintLeft_toRightOf="@id/iv_thumsup"
                            app:layout_constraintRight_toRightOf="@id/box_main"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="쪽지"
                            app:layout_constraintTop_toBottomOf="@id/iv_send"
                            app:layout_constraintLeft_toLeftOf="@id/iv_send"
                            app:layout_constraintRight_toRightOf="@id/iv_send"
                    />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/box_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorRealWhite"
                        android:layout_marginTop="8dp"
                        android:padding="16dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/box_main"
                        app:layout_constraintBottom_toBottomOf="@id/constraint"
                        app:layout_constraintLeft_toLeftOf="@id/constraint"
                        app:layout_constraintRight_toRightOf="@id/constraint"
                >

                    <TextView
                            android:id="@+id/textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="위치"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintTop_toTopOf="@id/box_location"
                            app:layout_constraintBottom_toTopOf="@id/map"
                            app:layout_constraintLeft_toLeftOf="@id/box_location"/>


                    <fragment
                            android:id="@+id/map"
                            android:layout_width="380dp"
                            android:layout_height="100dp"
                            tools:context=".MapsActivity"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/textview"
                            app:layout_constraintLeft_toLeftOf="@id/box_location"
                            app:layout_constraintRight_toRightOf="@id/box_location"/>

                    <TextView
                            android:id="@+id/tv_loc_detail"
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorGray"
                            android:text="부산광역시 기장군 장안읍 해맞이로 286"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/map"
                            app:layout_constraintLeft_toLeftOf="@id/box_location"
                            app:layout_constraintRight_toRightOf="@id/box_location"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


    <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toTopOf="@id/navigation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_menu"
            android:background="@color/colorRealWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>