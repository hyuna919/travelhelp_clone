<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100dp">

    <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="[${종류}]"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_contents"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="제목"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_type"
        app:layout_constraintLeft_toRightOf="@id/tv_type"/>

    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:maxLength="30"
        android:text="비가 많이 와서 뗴제베운행이 일부중단된다고 합니다. 다들 사이트 들어가서 시간표 확인해보세요!!"
        app:layout_constraintTop_toBottomOf="@id/tv_type"
        app:layout_constraintBottom_toTopOf="@id/imageview"
        app:layout_constraintLeft_toLeftOf="@id/tv_type"/>

    <ImageView
            android:id="@+id/imageview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_thumsup"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_contents"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_recommended"/>

    <TextView
            android:id="@+id/tv_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:text="123"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@id/imageview"
            app:layout_constraintBottom_toBottomOf="@id/imageview"
            app:layout_constraintLeft_toRightOf="@id/imageview"/>


</androidx.constraintlayout.widget.ConstraintLayout>