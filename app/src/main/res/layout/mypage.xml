<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/board_tb" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent">


    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/board_boardtitle" app:layout_constraintStart_toStartOf="@+id/board_tb"
            app:layout_constraintEnd_toEndOf="@+id/board_tb" app:layout_constraintTop_toTopOf="@+id/board_tb"
            app:layout_constraintBottom_toBottomOf="@+id/board_tb" app:layout_constraintHorizontal_bias="0.3"
            android:textColor="@color/colorBlack" android:text="마이페이지"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/board_nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="595dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/board_tb" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/board_nav_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>